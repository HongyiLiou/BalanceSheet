article.musicPageBox
    .controler
        .albumPhoto
        .buttons
            button.pause(onclick="pauseYouTubePlayer()")
                i.fa.fa-pause
            button.play(onclick="playYouTubePlayer()")
                i.fa.fa-play
            button(onclick="stopYouTubePlayer()")
                i.fa.fa-stop
            button.unMute(onclick="muteYouTubePlayer()")
                i.fa.fa-volume-up
            button.mute(onclick="unMuteYouTubePlayer()")
                i.fa.fa-volume-off
            .volumebar
                .barHolder

        .viewer(draggable="false")
            p 正在播放：
            .songName
                span 想見你
            .visual

        section.setting
            label(for="showMusicType_album")
                input(type="radio" id="showMusicType_album" name="showLinksType" value="album" checked)
                .selectedHolder
                p 唱片版型

            label(for="showMusicType_list")
                input(type="radio" id="showMusicType_list" name="showLinksType" value="list")
                .selectedHolder
                p 清單版型


